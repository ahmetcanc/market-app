@model IEnumerable<BeekodSiteProject.Models.SalesHistory>

@{
    ViewBag.Title = "SaleHistory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Satis Gecmisi</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Stok Listesi</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>



    <div class="card">
        
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>adet</th>
                        <th>Toplam satis tutari</th>
                        <th>satis tarihi</th>
                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.TotalPrices</td>
                            <td>@item.DateTimes</td>
                        </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>
