                                @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Kaydet" class="btn btn-default" style="margin-right: 8px;">
                                <a href="/Settings/Setting" type="button" class="btn btn-primary">Listeye geri dön</a>
                            </div>
                        </div>
                    </div>}


            </div>
        </div>
    </div>

</section>