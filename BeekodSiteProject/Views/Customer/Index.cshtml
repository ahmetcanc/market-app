
@model List<BeekodSiteProject.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>DataTables</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Müşteri Listesi</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>



    <div class="card">
        <div class="card-header">
            <a class="btn btn-primary" href="@Url.Action("addCustomer","Customer")">Müşteri Ekle</a>

        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Barkod</th>
                        <th>Ürün İsim</th>
                        <th>Telefon Numarası</th>
                        <th>İşyeri</th>
                        <th>Mail</th>
                        <th>İşlem Tarihi</th>
                        <th>Bakiye</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Barkod</td>
                            <td>@item.Name</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Workplace</td>
                            <td>@item.Mail</td>
                            <td>@item.Transactiondate</td>
                            <td>@item.Balance</td>
                            <td>
                                <a style="margin-right: 4px;" href="@Url.Action("editCustomer","Customer",new {id=item.Id})" class="btn btn-tbl-edit btn-xs btn-secondary" title="Düzenle"><i class="fa-solid fa-pencil"></i></a>
                                @using (Html.BeginForm("deleteCustomer", "Customer", FormMethod.Post))
                                {
                                    @Html.Hidden("id", item.Id)
                                    <button type="submit" class="btn btn-tbl-edit btn-xs btn-danger" onclick="javascript:return confirm('Kayıt silinecektir.Emin misiniz?');"><i class="fa-solid fa-trash"></i></button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


