@model BeekodSiteProject.Models.Stock
@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <section class="content">

        <div class="card-header">
            <h3 class="card-title">Stok Ekle</h3>
        </div>
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="card">
                <div class="card-body">
                    <form asp-action="IcerikEkle" method="post">
                        <div class="form-row">
                            @Html.HiddenFor(model => model.Id)
                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.Barcode)
                                @Html.TextBoxFor(x => x.Barcode, new { @class = "form-control " })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.Name)
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control " })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.ImageUrl)
                                @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.SalesType)
                                @Html.TextBoxFor(x => x.SalesType, new { @class = "form-control " })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.PurchasePrice)
                                @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control ", @type = "number" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.SalePrice)
                                @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control ", @type = "number" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.Piece)
                                @Html.TextBoxFor(x => x.Piece, new { @class = "form-control ", @type = "number" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.Wholesaler)
                                @Html.TextBoxFor(x => x.Wholesaler, new { @class = "form-control " })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.StockGroup)
                                @Html.TextBoxFor(x => x.StockGroup, new { @class = "form-control " })
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <a href="/Stock/Index" class="btn btn-warning">Listeye Geri Dön</a>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </section>



